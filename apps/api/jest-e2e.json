{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.ts$": ["@swc/jest"]
  },
  "testEnvironment": "node",
  "moduleNameMapper": {
    "^@app/db(.*)$": "<rootDir>/../../packages/db/src$1",
    "^@app/shared(.*)$": "<rootDir>/../../packages/shared/src$1"
  }
}
