# ──────────────────────────────────────────────
# Fred — Environment Variables
# Copy to .env and fill in your values
# ──────────────────────────────────────────────

# ── PostgreSQL ────────────────────────────────
POSTGRES_USER=fred
POSTGRES_PASSWORD=fred_dev_password
POSTGRES_DB=fred
POSTGRES_PORT=5432

# Full connection string (used by API and workers)
DATABASE_URL=postgresql://fred:fred_dev_password@localhost:5432/fred

# ── Redis ─────────────────────────────────────
REDIS_HOST=localhost
REDIS_PORT=6379
# Production only:
# REDIS_PASSWORD=your_redis_password

# ── API ───────────────────────────────────────
API_PORT=3001
JWT_SECRET=dev_jwt_secret_change_in_production
ENCRYPTION_KEY=dev_encryption_key_32chars!!

# ── Frontend ──────────────────────────────────
WEB_PORT=3000
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_WS_URL=http://localhost:3001

# ── N8N ───────────────────────────────────────
N8N_PORT=5678
N8N_HOST=localhost
N8N_DB=fred_n8n
N8N_ENCRYPTION_KEY=dev_n8n_encryption_key
FRED_N8N_API_KEY=dev_n8n_api_key

# ── Bull Board (Queue Monitor) ────────────────
BULL_BOARD_PORT=3002

